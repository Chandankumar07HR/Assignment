@model List<CodeFirst_EF_CodeBaseTest1.Models.Movie>
@{
    ViewBag.Title = "MoviesByYear";
}


<h2>Movies Released in Year</h2>
@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>Movie ID</th>
            <th>Movie Name</th>
            <th>Date of Release</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Mid</td>
                <td>@movie.MovieName</td>
                <td>@movie.DateOfRelease.ToShortDateString()</td>
            </tr>
        }
    </table>
}
else
{
    <p>No movies released in the specified year.</p>
    
}