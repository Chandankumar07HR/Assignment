@model IEnumerable<CodeFirst_EF_CodeBaseTest1.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Release Date</th>
        <th>Action</th>
    </tr>
    @foreach (var movie in Model)
    {
<tr>
    <td>@movie.Mid</td>
    <td>@movie.MovieName</td>
    <td>@movie.DateOfRelease.ToShortDateString()</td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = movie.Mid }) |
        @Html.ActionLink("Edit", "Edit", new { id = movie.Mid }) |
        @Html.ActionLink("Delete", "Delete", new { id = movie.Mid })
    </td>
</tr>}
</table>

